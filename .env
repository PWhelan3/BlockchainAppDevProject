# .env - Environment Variables Configuration

# WalletConnect Project ID (REQUIRED for wallet connections)
# Get yours from: https://cloud.walletconnect.com
VITE_WALLETCONNECT_PROJECT_ID=178fd38f4bcee3614df5176873ebb5c5

# Network Configuration
VITE_CHAIN_ID=80001
VITE_NETWORK_NAME=polygon-mumbai

# IPFS Configuration (optional)
VITE_PINATA_API_KEY=your_pinata_api_key
VITE_PINATA_SECRET_KEY=your_pinata_secret_key

# Development/Production flags
VITE_NODE_ENV=development

# Contract Addresses (add your deployed contract addresses)
VITE_NFT_CONTRACT_ADDRESS=0x...
VITE_MARKETPLACE_CONTRACT_ADDRESS=0x...